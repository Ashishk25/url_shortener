<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>
<body>
    <div class="container">
        <h1 class="text-center ">URL Shortener </h1>
        <form action="/shortUrl" method="POST" class="my-4 form-inline">
            <label for="fullUrl" class="sr-only">Full Url</label>
            <div class="d-flex">
            <input required placeholder="URL" type="url" name="fullUrl" id='fullUrl' class=" form-control pr-5">
            <button class="btn btn-success" type="submit">Shrink</button>
        </div>
        </form>
    
        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th>Full Url</th>
                    <th>Short Url</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>
                <% urls.forEach(url => { %>
                    <tr>
                        <td>
                            <a href="<%= url.full %>" ><%= url.full %></a>
                        </td>
                        <td>
                            <a href="<%= url.short %>"><%= url.short %></a>
                        </td>
                        <td><%= url.clicks %></td>
                    </tr>
              <%  }); %>
               
            </tbody>
        </table>
    </div>
</body>
</html>